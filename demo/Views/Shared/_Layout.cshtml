<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @*font awesome*@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" integrity="sha512-xh6O/CkQoPOWDdYTDqeRdPCVd1SpvCA9XXcUnZS2FmJNp1coAFzvtCN9BmamE+4aHK8yyUHUSCcJHgXloTyT2A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    @*font*@
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet">
    <title>@ViewBag.Title - HMI</title>

    @*bootstrap 4*@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    @* css *@
    <link href="@Url.Content("~/assets/scss/Main.css")" rel="stylesheet" type="text/css" />

    @* signUp *@
    <link href="~/assets/scss/DangKy.css" rel="stylesheet" />

    @* logIn *@
    <link href="~/assets/scss/DangNhap.css" rel="stylesheet" />

    @RenderSection("styles", false)

</head>
<body>

    <header class="fixed-top">
        <div class="container">
            <nav class="navbar navbar-expand-lg navbar-light">
                <a href="#" class="header__logo">
                    <img src="~/assets/images/logo.png" alt="Imgae Logo">
                    <h3>DocTemp.vn</h3>
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto header__menu">
                        <li class="nav-item" ref="trang-chu">
                            <a ref="trang-chu" href="~/trang-chu">Trang chủ</a>
                        </li>
                        <li class="nav-item">
                            <a ref="tinh-nang-va-loi-ich" href="~/tinh-nang-va-loi-ich">Tính năng và lợi ích</a>
                        </li>
                        <li class="nav-item">
                            <a ref="templates" href="~/templates">Templates</a>
                        </li>
                        <li class="nav-item">
                            <a ref="danh-gia" href="">Đánh giá</a>
                        </li>
                        <li class="nav-item">
                            <a ref="bang-gia" href="">Bảng giá</a>
                        </li>
                    </ul>
                    <div class="header__login">
                        <!-- Button trigger modal -->
                        <button type="button" data-toggle="modal" data-target="#logIn">
                            Đăng nhập
                        </button>
                        <button type="button" data-toggle="modal" data-target="#signUp">
                            Đăng ký
                        </button>
                    </div>
                </div>
            </nav>
        </div>
    </header>


    <!-- Modal SignUp -->
    <div class="modal fade" id="signUp" tabindex="-1" role="dialog" aria-labelledby="logInTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document" style="max-width: 1200px;">
            <div class="modal-content modal-signUp">
                <div class="modal-header modal-signUp--header">
                    <div class="logo">
                        <img src="../assets/images/logo.png" alt="logo_HMI" />
                        <h2>DocTemp.vn</h2>
                    </div>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body modal-signUp--body">
                    <div class="sign-up">
                        <div class="container">
                            <div class="row">
                                <div class="col-xl-6">
                                    <img class="main-image" src="../assets/images/image.png" alt="image_main">
                                    <p id="copyright">Copyright Reserved  &copy; 2022 HMI JSC</p>
                                </div>
                                <div class="col-xl-6">
                                    <div class="sign-up__form">
                                        <h3>Đăng ký</h3>
                                        <form>
                                            <div class="form-group">
                                                <i class="fa-solid fa-user"></i>
                                                <input type="text" class="form-control" id="sign-up__form--name" placeholder="Họ và tên">
                                            </div>
                                            <div class="form-group">
                                                <i class="fa-solid fa-envelope"></i>
                                                <input type="email" class="form-control" id="sign-up__form--email" placeholder="Địa chỉ email">
                                            </div>
                                            <div class="form-group">
                                                <i class="fa-solid fa-phone"></i>
                                                <input type="number" class="form-control" id="sign-up__form--phone" placeholder="Số điện thoại liên hệ">
                                            </div>
                                            <div class="form-group">
                                                <i class="fa-solid fa-building"></i>
                                                <input type="text" class="form-control" id="sign-up__form--company" placeholder="Tên công ty">
                                            </div>
                                            <div class="form-group">
                                                <i class="fa-solid fa-address-book"></i>
                                                <input type="text" class="form-control" id="sign-up__form--address" placeholder="Địa chỉ liên hệ">
                                            </div>
                                            <button type="button" id="btnDangKy" class="btn btn-primary">Đăng Ký</button>
                                        </form>


                                        <div class="sign-up__form__more">
                                            <span>Hoặc</span>
                                            <div class="sign-up__form__more--social">
                                                <div class="sign-up__form__more--social--google">
                                                    <img src="../assets/images/Google__G__Logo.svg.png" alt="google" />
                                                    <span>Sign up with google</span>
                                                </div>

                                                <div class="sign-up__form__more--social--facebook">
                                                    <img src="../assets/images/facebook-icon-1024x1024.png" alt="facebook" />
                                                    <span>Sign up with Facebook</span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="rules">
                                            <a href="">Điều khoản và Điều kiện</a>
                                            <span>|</span>
                                            <a href="">Chính sách bảo mật</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal LogIn -->
    <div class="modal fade" id="logIn" tabindex="-1" role="dialog" aria-labelledby="signInTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" style="max-width: 1200px;" role="document">
            <div class="modal-content modal-logIn">
                <div class="modal-header modal-logIn--header">
                    <div class="logo">
                        <img src="../assets/images/logo.png" alt="logo_HMI" />
                        <h2>DocTemp.vn</h2>
                    </div>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body modal-logIn--body">
                    <div class="container login">
                        <div class="row">
                            <div class="col-xl-6 login__right">
                                <div class="login__right__logo">
                                    <div class="login__right__logo--image">
                                        <img src="../assets/images/image.png" alt="">
                                    </div>
                                </div>
                                <div class="login__right__copyright">
                                    <span>Copyright Reserved &copy; 2022 HMI JSC</span>
                                </div>
                            </div>

                            <div class="col-xl-6 login__left">
                                <div class="login__left__form">
                                    <h2>Đăng nhập</h2>
                                    <form>
                                        <div class="form-group login__left__form__input">
                                            <i class="fa-solid fa-user"></i>
                                            <input type="email" name="email" class="form-control form__email" id="email" placeholder="admin@gmail.com">
                                        </div>

                                        <div class="form-group login__left__form__input">
                                            <i class="fa-solid fa-lock"></i>
                                            <input type="password" name="password" class="form-control form__password" id="password" placeholder="&lowast; &lowast; &lowast; &lowast; &lowast; &lowast; &lowast; &lowast;">
                                        </div>
                                        <div class="form__feature">
                                            <div class="form-check form__feature--check">
                                                <input type="checkbox" class="check--input" id="memorize-login">
                                                <label class="check--label" for="memorize-login">Ghi nhớ đăng nhập</label>
                                            </div>
                                            <div class="form-forgot-password form__feature--forgot-password">
                                                <a href="">Quên mật khẩu ?</a>
                                            </div>
                                        </div>

                                        <button type="button" id="btn-login" class="btn btn-primary">Đăng nhập</button>
                                    </form>

                                    <div class="login__left__form__create">
                                        <a href="./DangKy.html" class="login__left__form__create--account">Tạo tài khoản mới ? Đăng ký</a>
                                        <!--@Html.ActionLink("Tạo tài khoản mới ? Đăng ký", "DangKy", "Home", new {@class = "login__left__form__create--account" })-->
                                        <span>Hoặc</span>
                                        <div class="society">
                                            <a href="">
                                                <img src="../assets/images/Google__G__Logo.svg.png" alt="">
                                            </a>
                                            <a href="">
                                                <img src="../assets/images/Twitter-Logo-New-.png" alt="">
                                            </a>
                                            <a href="">
                                                <img src="../assets/images/facebook-icon-1024x1024.png" alt="">
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                <div class="rules">
                                    <a href="">Điều khoản và Điều kiện</a>
                                    <span>|</span>
                                    <a href="">Chính sách bảo mật</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <content>
        @RenderBody()
    </content>

    <footer>
        <div class="container footer">
            <div class="row">
                <div class="col-xl-3 col-md-4 col-6 footer__list">
                    <div class="introduce">
                        <h6>Giới thiệu HMI</h6>
                        <ul>
                            <li>
                                <i class="fa-solid fa-chevron-right"></i>
                                <span>Về chúng tôi</span>
                            </li>
                            <li>
                                <i class="fa-solid fa-chevron-right"></i>
                                <span>Liên hệ chúng tôi</span>
                            </li>
                            <li>
                                <i class="fa-solid fa-chevron-right"></i>
                                <span>Chính sách bảo mật</span>
                            </li>
                            <li>
                                <i class="fa-solid fa-chevron-right"></i>
                                <span>Chính sách cookie</span>
                            </li>
                            <li>
                                <i class="fa-solid fa-chevron-right"></i>
                                <span>Điều khoản sử dụng</span>
                            </li>
                            <li>
                                <i class="fa-solid fa-chevron-right"></i>
                                <span>Thỏa thuận liên kết</span>
                            </li>
                        </ul>
                        <img src="~/assets/images/logo-dark.png" />
                    </div>
                </div>
                <div class="col-xl-3 col-md-4 col-6 footer__list">
                    <div class="doctemp">
                        <h6>DocTemp.VN</h6>
                        <ul>
                            <li>
                                <i class="fa-solid fa-chevron-right"></i>
                                <span>Trang chủ</span>
                            </li>
                            <li>
                                <i class="fa-solid fa-chevron-right"></i>
                                <span>Tính năng và lợi ích</span>
                            </li>
                            <li>
                                <i class="fa-solid fa-chevron-right"></i>
                                <span>Tải về</span>
                            </li>
                            <li>
                                <i class="fa-solid fa-chevron-right"></i>
                                <span>Dùng thử</span>
                            </li>
                            <li>
                                <i class="fa-solid fa-chevron-right"></i>
                                <span>Danh sách mẫu</span>
                            </li>
                            <li>
                                <i class="fa-solid fa-chevron-right"></i>
                                <span>ý kiến đóng góp</span>
                            </li>
                            <li>
                                <i class="fa-solid fa-chevron-right"></i>
                                <span>Hỗ trợ</span>
                            </li>
                            <li>
                                <i class="fa-solid fa-chevron-right"></i>
                                <span>Eula</span>
                            </li>
                            <li>
                                <i class="fa-solid fa-chevron-right"></i>
                                <span>Chương trình liên kết</span>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="col-xl-3 col-md-4 col-12 footer__list">
                    <div class="social-network">
                        <h6>Social Network</h6>
                        <ul>
                            <li>
                                <i class="fa-brands fa-facebook"></i>
                            </li>
                            <li>
                                <i class="fa-brands fa-twitter"></i>
                            </li>
                            <li>
                                <i class="fa-brands fa-google-plus"></i>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <span class="copyright">&copy; 2022 HMISP JSC</span>
    </footer>

    @* bootstrap *@
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    @* jquery *@
    <script src="https://code.jquery.com/jquery-3.6.1.js" integrity="sha256-3zlB5s2uwoUzrXK3BT7AX3FyvojsraNFxCc2vC/7pNI=" crossorigin="anonymous"></script>
    @*javascript*@
    <script src="~/assets/js/Main.js"></script>
    <script src="~/assets/js/DangKy.js"></script>
    <script src="~/assets/js/DangNhap.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
